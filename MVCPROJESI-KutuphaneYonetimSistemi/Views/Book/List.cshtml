@model List<BookViewModel>

<h3 class="text-center mt-5">Kitaplarımız</h3>
<a asp-action="Create" class="btn btn-success fw-bold mb-3 mt-3">Yeni Ekle</a>

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="width: 100%; height: 250px; object-fit: contain;">
                    <div class="card-header">
                        <h5 class="card-title">@item.Title</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Yazar:</strong> @item.AuthorName</p>
                        <p><strong>Tür:</strong> @item.Genre</p>
                        <p><strong>Yayın Tarihi:</strong> @item.PublishDate.ToString("dd MMM yyyy")</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detaylara Git</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
